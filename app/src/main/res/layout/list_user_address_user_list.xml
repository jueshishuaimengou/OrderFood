<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="10dp"
    >

    <TextView
        android:id="@+id/list_user_my_address_receiveAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上海市 浦东区 汤臣一品"
        android:textStyle="bold"
        android:textSize="20sp"
        />


    <TextView
        android:id="@+id/list_user_my_address_receivePeo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小铭"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:layout_below="@+id/list_user_my_address_receiveAddress"
        />


    <TextView
        android:id="@+id/list_user_my_address_receivePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456789"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/list_user_my_address_receivePeo"
        android:layout_below="@+id/list_user_my_address_receiveAddress"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_user_my_address_receiveAddress"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_user_my_address_edit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="right"
            android:layout_gravity="right"
            android:src="@drawable/bj"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>







</RelativeLayout>
















